<style>
  #book-page {
    margin: 50px auto;
    width: 600px; /* Adjust width as needed */
    border: 1px solid #ddd;
    padding: 20px;
    border-radius: 5px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
  }

  .container {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  h1 {
    font-size: 2em;
    margin-bottom: 10px;
  }

  p {
    font-size: 1.2em;
    margin-bottom: 20px;
  }

  .actions {
    display: flex;
    justify-content: space-between;
    width: 100%;
  }

  .actions a,
  .actions form {
    flex: 1;
  }

  .actions a {
    text-decoration: none;
    padding: 10px 20px;
    background-color: #333;
    color: #fff;
    border-radius: 5px;
  }

  .actions a:hover {
    background-color: #444;
  }

  .actions form {
    display: flex;
    justify-content: flex-end;
  }

  .actions input[type="submit"] {
    padding: 10px 20px;
    background-color: #f00;
    color: #fff;
    border: none;
    border-radius: 5px;
    cursor: pointer;
  }

  .actions input[type="submit"]:hover {
    background-color: #d00;
  }
</style>

<div id="book-page">
  <div class="container">
    <h1>{{book.title}}</h1>
    <div>
      <p>Este livro tem {{book.pageqty}} p√°ginas.</p>
    </div>
    <div class="actions">
      <a href="/books/edit/{{book.id}}">Editar</a>
      <form action="/books/remove/{{book.id}}" method="POST">
        <input type="submit" value="Remover">
      </form>
    </div>
  </div>
</div>
